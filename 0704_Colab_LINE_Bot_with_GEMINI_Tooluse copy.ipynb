from flask import Flask, request, abort
from linebot.v3 import WebhookHandler
from linebot.v3.exceptions import InvalidSignatureError
from linebot.v3.messaging import Configuration, ApiClient, MessagingApi, ReplyMessageRequest, TextMessage
from linebot.v3.webhooks import MessageEvent, TextMessageContent

# --- 設定憑證 ---
LINE_CHANNEL_ACCESS_TOKEN = 'YOUR_CHANNEL_ACCESS_TOKEN'
LINE_CHANNEL_SECRET = 'YOUR_CHANNEL_SECRET'
NGROK_AUTH_TOKEN = "YOUR_NGROK_TOKEN"
GEMINI_API_KEY = "YOUR_GEMINI_API_KEY"

# 設定 Gemini (加入 tools)
genai.configure(api_key=GEMINI_API_KEY)
model = genai.GenerativeModel(
    model_name='gemini-1.5-flash',
    tools=tools_list
)

configuration = Configuration(access_token=LINE_CHANNEL_ACCESS_TOKEN)
handler = WebhookHandler(LINE_CHANNEL_SECRET)
ngrok.set_auth_token(NGROK_AUTH_TOKEN)

app = Flask(__name__)
chat_sessions = {}

@app.route("/callback", methods=['POST'])
def callback():
    signature = request.headers['X-Line-Signature']
    body = request.get_data(as_text=True)
    try:
        handler.handle(body, signature)
    except InvalidSignatureError:
        abort(400)
    return 'OK'

@handler.add(MessageEvent, message=TextMessageContent)
def handle_message(event):
    user_id = event.source.user_id
    user_text = event.message.text

    if user_id not in chat_sessions:
        # 啟用 enable_automatic_function_calling=True，Gemini 會自動執行工具並回傳結果
        chat_sessions[user_id] = model.start_chat(history=[], enable_automatic_function_calling=True)

    chat = chat_sessions[user_id]
    
    try:
        response = chat.send_message(user_text)
        reply_text = response.text
    except Exception as e:
        reply_text = f"處理時發生錯誤：{str(e)}"

    with ApiClient(configuration) as api_client:
        line_bot_api = MessagingApi(api_client)
        line_bot_api.reply_message(
            ReplyMessageRequest(
                reply_token=event.reply_token,
                messages=[TextMessage(text=reply_text)]
            )
        )

# 啟動 Ngrok
public_url = ngrok.connect(5000)
print(f"Webhook URL: {public_url}/callback")

if __name__ == "__main__":
    app.run(port=5000)
